define format-x ( symbolList ) {
    
    str-join [map $symbol->string $symbolList] " "
}





###########################################################################
#
# 
#
###########################################################################

#
# Koch curve production map.
#
define kochProductionMapData (
    ( F ( F + F - - F - F ) )
    ( + ( + ) )
    ( - ( - ) )
)
define kockProductionFunction \
        [lSystem-get-production-funcion $kochProductionMapData]

define x0 ( F )
define x1 [$kockProductionFunction $x0]
define x2 [$kockProductionFunction $x1]

echo "x(0) = " [format-x $x0]
echo "x(1) = " [format-x $x1]
echo "x(2) = " [format-x $x2]






